	<bean id="simpleDocService" class="eea.eprtr.dao.SimpleDocServiceJdbc">
		<property name="dataSource" ref="dataSource" />
	</bean>
	<bean id="simpleDocServiceEprtrCms" class="eea.eprtr.dao.SimpleDocServiceJdbc">
		<property name="dataSource" ref="dataSourceEprtrCms" />
	</bean>

</beans>
